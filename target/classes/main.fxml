<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2"
      fx:controller="dead.sec.kapitaz.FileManager.Controller">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Exit this program"/>
        </Menu>
    </MenuBar>

    <HBox>
        <ComboBox/>
        <TextField editable="false" HBox.hgrow="ALWAYS"/>
        <Button text="UP"/>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </HBox>

    <TableView VBox.vgrow="ALWAYS"/>

    <HBox spacing="5">
        <Button maxWidth="Infinity" text="Copy" HBox.hgrow="ALWAYS"/>
        <Button maxWidth="Infinity" text="Move" HBox.hgrow="ALWAYS"/>
        <Button maxWidth="Infinity" text="Delete" HBox.hgrow="ALWAYS"/>
        <Button maxWidth="Infinity" text="Exit" HBox.hgrow="ALWAYS" onAction="#btnExitAction"/>
    </HBox>

</VBox>
